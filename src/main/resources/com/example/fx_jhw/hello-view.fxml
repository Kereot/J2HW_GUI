      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" />
      </GridPane.margin></TextField>
    <TextArea fx:id="ta" editable="false" prefHeight="191.0" prefWidth="469.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <GridPane.margin>
         <Insets left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></TextArea>
</GridPane>
